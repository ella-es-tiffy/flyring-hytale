// Illegal Rings - Admin Config Panel

$C = "../Common.ui";

@SectionTitle = Label {
  Style: (FontSize: 14, TextColor: #ccb588, RenderUppercase: true, RenderBold: true);
  Anchor: (Bottom: 10);
  Text: @Text;
};

@HintLabel = Label {
  Style: (FontSize: 11, TextColor: #6e7da1);
  Anchor: (Top: 2, Bottom: 8);
  Text: @Text;
};

@Separator = Group {
  Anchor: (Height: 1, Top: 4, Bottom: 12);
  Background: #5e512c;
};

// Craft slot row helper - IDs must be unique top-level, placed directly on children

// Main page overlay
$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@Container {
    Anchor: (Width: 650, Height: 700);

    #Title {
      $C.@Title #ConfigTitle {
        @Text = "Illegal Rings - Config";
      }
    }

    #Content {
      LayoutMode: Top;

      // ========== TAB BUTTONS ==========
      Group {
        LayoutMode: Left;
        Anchor: (Bottom: 10);

        $C.@SecondaryTextButton #TabGeneral {
          Text: "General";
          FlexWeight: 1;
        }

        Group { Anchor: (Width: 5); }

        $C.@SecondaryTextButton #TabCraft {
          Text: "Craft";
          FlexWeight: 1;
        }

        Group { Anchor: (Width: 5); }

        $C.@SecondaryTextButton #TabLoot {
          Text: "Loot";
          FlexWeight: 1;
        }
      }

      // ========== TAB: GENERAL ==========
      Group #GeneralContent {
        Visible: true;
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        // --- Rings Enabled ---
        @SectionTitle { @Text = "Rings Enabled"; }
        @HintLabel { @Text = "Toggle which rings are active on the server"; }

        Group {
          LayoutMode: Left; Anchor: (Height: 28, Bottom: 4);
          $C.@CheckBox #EnabledFlyRing { Value: true; }
          Label { Text: "Fly Ring"; Anchor: (Left: 11); Style: (FontSize: 14, TextColor: #b7cedd, VerticalAlignment: Center); }
        }
        Group {
          LayoutMode: Left; Anchor: (Height: 28, Bottom: 4);
